<Window x:Class="DZ_MAIL____.Had"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DZ_MAIL____"
        mc:Ignorable="d"
        Title="Had" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="194*"/>
            <ColumnDefinition Width="198*"/>
            <ColumnDefinition Width="401*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <Button x:Name="btnNewLetter" Margin="5" FontFamily="Algerian" Background="#FFD2D32B" FontSize="20" Click="btnNewLetter_Click">New letter</Button>
        <Button x:Name="btnRefresh" Margin="5" FontFamily="Algerian" Grid.Column="1" Background="#FF79CE4C" FontSize="20" Click="btnRefresh_Click">Refresh</Button>
        <ListBox x:Name="lb_Letters" Grid.Row="1" Grid.ColumnSpan="3" Margin="5" Background="#FF5BDACF" MouseDoubleClick="lb_Letters_MouseDoubleClick"></ListBox>
    </Grid>
</Window>
